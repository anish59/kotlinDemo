<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCallAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show me Again"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnInitDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="init Demo" />

        <Button
            android:id="@+id/btnMethodDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constructor And MethodDemo" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInheritanceDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inheritance" />
    </LinearLayout>

</LinearLayout>